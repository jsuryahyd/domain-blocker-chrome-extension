{
    "name": "Domain Blocker",
    "version": "0.1.0",
    "description": "Block unwanted Domains",
  
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "declarativeContent",
        "activeTab",
        "webNavigation",
        "storage",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "run_at": "document_start",
        "scripts": [
            "assets/js/common_funcs.js",
            "background.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "assets/options/options.html",
    "icons": {
        "128": "assets/icons/denied.png"
    }
}